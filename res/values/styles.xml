<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/background_window</item>
        <item name="android:windowAnimationStyle">@style/base_activity_animation</item>
        <item name="android:actionModeBackground">@drawable/action_bar_background</item>
        <item name="android:actionModeSplitBackground">@drawable/action_bar_background</item>

        <!-- <item name="android:actionBarStyle">@style/ActionBarStyle</item> -->
    </style>
